<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/descarga1"
    tools:context="com.example.rafae.ladys.FourthActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/b3"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/Rosa" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Mas del 60% de mujeres en el mundo no usan su talla adecuada."
        android:textSize="20dp"
        android:textColor="@color/Rosa" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Esta aplicacion esta destinada a ayudar a escoger el brasier al momento de comprarlo en una tienda."
        android:textSize="20dp"
        android:textColor="@color/Rosa" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Puedes usar tallas gemelas en caso de no encontrar la tuya."
        android:textSize="20dp"
        android:textColor="@color/Rosa" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Los resultados pueden no se los adecuados, por lo que nunca es mal recibido preguntar al asistente de ventas previamente."
        android:textSize="20dp"
        android:textColor="@color/Rosa" />
</LinearLayout>
